{% include "partials.main" %}

<head>
    {% include "partials.title-meta" with {'title': 'Verify Email Address'} %}
    {% include "partials.head-css" %}
</head>

<body>

<div class="auth-page-wrapper py-5 d-flex justify-content-center align-items-center min-vh-100">
    <!-- auth page content -->
    <div class="auth-page-content overflow-hidden p-0">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-8 col-lg-6 col-xl-5">
                    <div class="card mt-4">
                        <div class="card-body p-4 text-center">
                            <div class="avatar-lg mx-auto mt-2">
                                <div class="avatar-title bg-light text-success display-3 rounded-circle">
                                    <i class="ri-checkbox-circle-fill"></i>
                                </div>
                            </div>
                            <div class="mt-4 pt-2">
                                <h4>Check Your Inbox</h4>
                                <p class="text-muted mx-4">We've sent you a magic link to your email address.<br/>
                                    Please click the link to confirm your address.</p>
                                <div class="mt-4">
                                    <div class="text-center text-muted mt-3">
                                        <p class="small">Can't see the email? Please check the spam folder.<br/>
                                            Didn't receive your email? You can send it back by clicking the button below.</p>

                                        {% if session('status') == 'verification-link-sent' %}
                                            <button class="btn btn-primary btn-block disabled">
                                                Email Confirmation Sent
                                            </button>
                                        {% else %}
                                            <form method="POST" class="small" action="{{ route('verification.send') }}">
                                                <input type="hidden" name="_token" value="{{ csrf_token() }}"/>

                                                <button class="btn btn-primary btn-block">
                                                    Resend Email Confirmation
                                                </button>
                                            </form>
                                        {% endif %}
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- end card body -->
                    </div>
                    <!-- end card -->
                </div>
            </div>
            <!-- end row -->
        </div>
        <!-- end container -->
    </div>
    <!-- end auth page content -->
</div>
<!-- end auth-page-wrapper -->

{% include "partials.vendor-scripts" %}

</body>
</html>
