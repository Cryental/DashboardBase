{% extends "layout.blank" %}

{% block title %}Two-Factor Authorization{% endblock %}

{% block content %}
<body class="d-flex flex-column">
<div class="page page-center">
    <div class="container container-tight py-4">
        <div class="text-center mb-4">
            <a href="#" class="navbar-brand navbar-brand"><img src="/img/logo.png" height="36" alt=""></a>
        </div>
        <div class="card card-md">
            <div class="card-body">
                <h2 class="h2 text-center mb-4">Please enter 2FA code</h2>
                <p class="mb-4">Two-factor authentication (2FA) is enabled for your account. Please enter a code to log in.</p>
                <form method="POST" autocomplete="off" action="{{ route('two-factor.login') }}">
                    <input type="hidden" name="_token" value="{{ csrf_token() }}"/>

                    <div class="mb-3">
                        <label class="form-label">Code</label>
                        <input id="code" name="code" type="text" class="form-control" required>
                    </div>

                    <div class="form-footer">
                        {% if errors is not empty %}
                            <div class="alert alert-danger">
                                <p>{{ errors.all()|first }}</p>
                            </div>
                        {% endif %}
                        <button type="submit" class="btn btn-primary w-100">Verify Code</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
{% endblock %}
