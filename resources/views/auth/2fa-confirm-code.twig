{% extends "layout.blank" %}

{% block title %}2FA Confirmation{% endblock %}

{% block included_scripts %}
    {% if errors is not empty %}
        <script>
            $(document).ready(function() {
                $('#modal-error-message').modal('show');
            });
        </script>
    {% endif %}

    <script type="text/javascript">
        $('#2fa-cancel').click(function () {
            $.ajax({
                type: 'POST',
                url: '/2fa-cancel',
                data: {
                    _token: '{{ csrf_token() }}'
                },
                success: function (data) {
                    window.location.href = '{{ route('settings.security') }}';
                }
            });
        });
    </script>
{% endblock %}
{% block content %}
<body class="d-flex flex-column">
<div class="page page-center">
    <div class="container container-tight py-4">
        <div class="text-center mb-4">
            <div class="navbar-brand navbar-brand-autodark d-none-navbar-horizontal pe-0 pe-md-3">
                <a href=".">
                    <img src="/img/logo.png" alt="Cryental's Private Space" class="navbar-brand-image">
                </a>
            </div>
        </div>
        <div class="col-lg-12">
            <h2 class="h2 text-center mb-4">Two-Factor Authentication</h2>
            <p class="mb-4 text-center">You have enabled Two-Factor Authentication for your account. Follow the instructions to complete setup.</p>
        </div>
        <div class="col-lg-12">
            <h3 class="h3 text-center mb-3">Download an authenticator app</h3>
            <p class="text-center">Android and iOS - Authy</p>
            <p class="text-center mb-4">Windows Phone - Microsoft Authenticator</p>
        </div>
        <div class="col-lg-12">
            <div class="card card-md">
                <div class="card-body">
                    <form method="POST" autocomplete="off" action="{{ route('two-factor.confirm') }}">
                        <input type="hidden" name="_token" value="{{ csrf_token() }}"/>
                        <div class="mb-3 text-center">
                            <h2 class="h2 text-center mb-4">Scan this code with the app</h2>
                            {{ auth_user().twoFactorQrCodeSvg()|raw }}
                        </div>
                        <div class="mb-4 text-center">
                            <p class="text-center">If you can't use a camera, you can use this secret key:</p>
                            <p class="text-center">{{ twoFactorSecretKey }}</p>
                        </div>
                        <div class="mb-3">
                            <label class="form-label text-center">Enter the 6-digit code generated by the app</label>
                            <input id="code" class="form-control text-center" type="text" name="code" autocomplete="off" required>
                        </div>
                        <div class="form-footer">
                            {% if session('status') is not empty %}
                                <div class="alert alert-success">
                                    <p>{{ session('status') }}</p>
                                </div>
                            {% endif %}
                            <div class="row">
                                <div class="col-6">
                                    <button type="button" class="btn w-100" id="2fa-cancel" name="2fa-cancel">
                                        Cancel
                                    </button>
                                </div>
                                <div class="col-6">
                                    <button type="submit" class="btn btn-primary w-100">Submit</button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal modal-blur fade" id="modal-error-message" tabindex="-1" role="dialog" aria-modal="true"
     aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            <div class="modal-status bg-danger"></div>
            <div class="modal-body text-center py-4">
                <svg xmlns="http://www.w3.org/2000/svg" class="icon mb-2 text-danger icon-lg" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                    <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
                    <path d="M19.875 6.27a2.225 2.225 0 0 1 1.125 1.948v7.284c0 .809 -.443 1.555 -1.158 1.948l-6.75 4.27a2.269 2.269 0 0 1 -2.184 0l-6.75 -4.27a2.225 2.225 0 0 1 -1.158 -1.948v-7.285c0 -.809 .443 -1.554 1.158 -1.947l6.75 -3.98a2.33 2.33 0 0 1 2.25 0l6.75 3.98h-.033z"></path>
                    <path d="M12 12m-3 0a3 3 0 1 0 6 0a3 3 0 1 0 -6 0"></path>
                </svg>
                {% if errors is not empty %}
                    <h3>Error Occurred</h3>
                    <div class="text-muted">{{ errors.all()|first }}
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
</div>
{% endblock %}
