{% extends "layout.blank" %}

{% block title %}Reset Password{% endblock %}

{% block included_scripts %}
    <script type="text/javascript">
        $(document).ready(function () {
            // Validate inputs on input
            $('#email, #password, #password_confirmation').on('input', function () {
                validateForm();
            });

            function validateForm() {
                var email = $('#email').val();
                var password = $('#password').val();
                var passwordConfirmation = $('#password_confirmation').val();
                var emailValid = validateEmail(email);
                var passwordValid = validatePassword(password);
                var passwordsMatch = password === passwordConfirmation;

                // Show or hide password mismatch hint
                $('#password-confirm-hint').css('display', passwordsMatch ? 'none' : 'inline');

                $('form').find('button[type="submit"]').prop('disabled', !(emailValid && passwordValid && passwordsMatch));
            }

            function validateEmail(email) {
                var emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
                return emailRegex.test(email);
            }

            function validatePassword(password) {
                var lengthValid = password.length >= 8 && password.length <= 20;
                var lettersNumbersValid = /[a-zA-Z]/.test(password) && /\d/.test(password);
                var noSpacesValid = !(/\s/.test(password) || /[^a-zA-Z\d]/.test(password));

                updateHint('#length-hint', lengthValid);
                updateHint('#letters-numbers-hint', lettersNumbersValid);
                updateHint('#no-spaces-hint', noSpacesValid);

                return lengthValid && lettersNumbersValid && noSpacesValid;
            }

            function updateHint(hintId, isValid) {
                var color = isValid ? 'yellow' : 'red';
                var symbol = isValid ? '✔' : '✖';
                $(hintId).find('.hint-icon').css('color', color).text(symbol);
            }
        });
    </script>
{% endblock %}
{% block content %}
<body class="d-flex flex-column">
<div class="page page-center">
    <div class="container container-tight py-4">
        <div class="text-center mb-4">
            <a href="#" class="navbar-brand navbar-brand"><img src="/img/logo.png" height="36" alt=""></a>
        </div>
        <div class="card card-md">
            <div class="card-body">
                <h2 class="h2 text-center mb-4">Reset Password</h2>
                <form method="POST" autocomplete="off" action="{{ route('password.update') }}">
                    <input type="hidden" name="_token" value="{{ csrf_token() }}"/>
                    <input type="hidden" name="token" value="{{ request.route('token') }}">

                    <div class="mb-3">
                        <label class="form-label">Email Address</label>
                        <input id="email" class="form-control" type="email" name="email"
                               value="{{ input_old('email', request.input('email')) }}" required readonly>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Password</label>
                        <input id="password" name="password" type="password" class="form-control" required>
                        <small class="form-hint" id="password-hints">
                            <p class="password-hint" id="length-hint"><span class="hint-icon" style="color: red;">✖</span> Must be 8-20 characters long</p>
                            <p class="password-hint" id="letters-numbers-hint"><span class="hint-icon" style="color: red;">✖</span> Must contain letters and numbers</p>
                            <p class="password-hint" id="no-spaces-hint"><span class="hint-icon" style="color: red;">✖</span> Must not contain spaces, special characters, or emoji</p>
                        </small>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Confirm Password</label>
                        <input id="password_confirmation" name="password_confirmation" type="password"
                               class="form-control" required>
                        <small class="form-hint">
                            <span id="password-confirm-hint" style="color: red; display: none;">Password confirmation does not match the password.</span>
                        </small>
                    </div>
                    <div class="form-footer">
                        {% if errors is not empty %}
                            <div class="alert alert-danger">
                                <p>{{ errors.all()|first }}</p>
                            </div>
                        {% endif %}
                        <button type="submit" class="btn btn-primary w-100" disabled>Reset Password</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
{% endblock %}
