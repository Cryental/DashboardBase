{% extends "layout.default" %}

{% block title %}Confirm Password{% endblock %}

{% block content %}
    <div class="container">
        <div class="row">
            <div class="col-md-6 col-md-offset-3">

                <div class="panel panel-primary">
                    <div class="panel-heading">
                        {{ trans('confirm-password.title') }}
                    </div>
                    <div class="panel-body">
                        <form method="POST" class="small" action="{{ route('password.email') }}">
                            <input type="hidden" name="_token" value="{{ csrf_token() }}"/>

                            {% if errors is not empty %}
                                <div class="alert alert-success">
                                    {% for error in errors.all() %}
                                        <p>{{ error }}</p>
                                    {% endfor %}
                                </div>
                            {% endif %}
                            <p>{{ trans('confirm-password.text')|raw }}</p>
                            <hr>
                            <div class="form-group">
                                <label for="password">{{ trans('confirm-password.password') }}</label>
                                <input id="password" class="form-control" type="password" name="password" required>
                            </div>
                            <div class="form-group">
                                <label
                                    for="password_confirmation">{{ trans('confirm-password.confirm_password') }}</label>
                                <input id="password_confirmation" class="form-control" type="password"
                                       name="password_confirmation" required>
                            </div>

                            <div style="margin-bottom: 10px"></div>
                            <button class="btn btn-primary btn-block">
                                {{ trans('confirm-password.confirm') }}
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
