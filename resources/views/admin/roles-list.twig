{% block content %}
    <div class="page-body">
        <div class="container-xl">
            <div class="row row-deck row-cards">
                <div class="col-lg-12">
                    <div class="card">
                        <div class="table-responsive">
                            <table class="table table-vcenter table-mobile-md card-table">
                                <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Name</th>
                                    <th>Description</th>
                                    <th>Level</th>
                                    <th class="w-33">Permissions</th>
                                    <th>Created Date</th>
                                    <th>Updated Date</th>
                                    <th class="w-1"></th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for role in roles %}
                                    <tr>
                                        <td>{{ role.id }}</td>
                                        <td>{{ role.name }}</td>
                                        <td>{{ role.description }}</td>
                                        <td>{{ role.level }}</td>
                                        <td>
                                            {% if permissions[role.id] is defined %}
                                                {% for permission in permissions[role.id] %}
                                                    <span class="badge badge-primary mb-1">{{ permission.name }}</span>
                                                {% endfor %}
                                            {% else %}
                                                <span class="text-muted">No permissions</span>
                                            {% endif %}
                                        </td>
                                        <td>{{ role.created_at }}</td>
                                        <td>{{ role.updated_at }}</td>
                                        <td>
                                            <div class="btn-list flex-nowrap">
                                                {% if auth_user().hasPermission('edit.roles') %}
                                                    {% if role.id == 1 or role.id == 2 %}
                                                        <a href="#" class="btn"
                                                           data-bs-toggle="modal" data-bs-target="#modal-default-role-warning">
                                                            Edit
                                                        </a>
                                                    {% else %}
                                                        <a href="/admin/roles/{{ role.id }}" class="btn">
                                                            Edit
                                                        </a>
                                                    {% endif %}
                                                {% endif %}
                                                {% if auth_user().hasPermission('delete.roles') %}
                                                    {% if role.id == 1 or role.id == 2 %}
                                                    <a href="#" data-value="{{ role.id }}" class="btn btn-danger"
                                                       data-bs-toggle="modal" data-bs-target="#modal-default-role-warning">
                                                        Remove
                                                    </a>
                                                    {% else %}
                                                        <a href="#" data-value="{{ role.id }}" class="btn btn-danger"
                                                           data-bs-toggle="modal" data-bs-target="#modal-role-remove">
                                                            Remove
                                                        </a>
                                                    {% endif %}
                                                {% endif %}
                                            </div>
                                        </td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                        <div class="card-footer d-flex align-items-center">
                            <p class="m-0 text-muted">{{ bottomText }}</p>
                            <ul class="pagination m-0 ms-auto">
                                {% if page != 1 %}
                                    <li class="page-item">
                                        <a class="page-link"
                                           href="{{ route('admin.users') }}?p={{ links[0] }}{% if search != "" %}&s={{ search }} {% endif %}"
                                           tabindex="-1">
                                            <svg xmlns="http://www.w3.org/2000/svg" class="icon" width="24" height="24"
                                                 viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none"
                                                 stroke-linecap="round" stroke-linejoin="round">
                                                <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
                                                <path d="M15 6l-6 6l6 6"></path>
                                            </svg>
                                            prev
                                        </a>
                                    </li>
                                {% else %}
                                    <li class="page-item disabled">
                                        <a class="page-link" href="#" tabindex="-1" aria-disabled="true">
                                            <svg xmlns="http://www.w3.org/2000/svg" class="icon" width="24" height="24"
                                                 viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none"
                                                 stroke-linecap="round" stroke-linejoin="round">
                                                <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
                                                <path d="M15 6l-6 6l6 6"></path>
                                            </svg>
                                            prev
                                        </a>
                                    </li>
                                {% endif %}
                                {% for i in 1..links|length-2 %}
                                    {% if page == links[i] %}
                                        <li class="page-item"><a class="page-link active"
                                                                 href="{{ route('admin.users') }}?p={{ links[i] }}{% if search != "" %}&s={{ search }} {% endif %}">{{ links[i] }}</a>
                                        </li>
                                    {% else %}
                                        <li class="page-item"><a class="page-link"
                                                                 href="{{ route('admin.users') }}?p={{ links[i] }}{% if search != "" %}&s={{ search }} {% endif %}">{{ links[i] }}</a>
                                        </li>
                                    {% endif %}
                                {% endfor %}
                                {% if page != links|last %}
                                    <li class="page-item">
                                        <a class="page-link"
                                           href="{{ route('admin.users') }}?p={{ links|last }}{% if search != "" %}&s={{ search }} {% endif %}">
                                            next
                                            <svg xmlns="http://www.w3.org/2000/svg" class="icon" width="24" height="24"
                                                 viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none"
                                                 stroke-linecap="round" stroke-linejoin="round">
                                                <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
                                                <path d="M9 6l6 6l-6 6"></path>
                                            </svg>
                                        </a>
                                    </li>
                                {% else %}
                                    <li class="page-item">
                                        <a class="page-link">
                                            next
                                            <svg xmlns="http://www.w3.org/2000/svg" class="icon" width="24" height="24"
                                                 viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none"
                                                 stroke-linecap="round" stroke-linejoin="round">
                                                <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
                                                <path d="M9 6l6 6l-6 6"></path>
                                            </svg>
                                        </a>
                                    </li>
                                {% endif %}
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
