{% extends "layout.admin" %}

{% block title %}Roles{% endblock %}

{% block included_scripts %}
    {% if errors is not empty %}
        <script>
            var createUserModal = new bootstrap.Modal(document.getElementById("modal-create-role"), {});
            document.onreadystatechange = function () {
                createUserModal.show();
            };
        </script>
    {% endif %}

    <script>
        const modal = document.getElementById('modal-role-remove');
        const modalLink = document.getElementById('role-remove-post');

        // Listen for the "show.bs.modal" event
        modal.addEventListener('show.bs.modal', function (event) {
            // Get the button that triggered the modal
            const button = event.relatedTarget;

            // Get the data-value attribute from the button
            const value = button.getAttribute('data-value');

            // Update the link's href attribute with the value
            modalLink.action = '/admin/role/' + value + '/remove';
        });
    </script>
    <script>
        $("#search-form").submit(function (e) {

            e.preventDefault(); // avoid to execute the actual submit of the form.

            var form = $(this);

            $.ajax({
                type: "POST",
                url: {{ route('admin.roles.search') }},
                data: form.serialize(), // serializes the form's elements.
                success: function (data) {
                    // var response = JSON.parse(data);
                    $("div#users-container").html(data);
                }
            });

        });
    </script>
{% endblock %}
{% block content %}
    <div class="page-header d-print-none">
        <div class="container-xl">
            <div class="row g-2 align-items-center">
                <div class="col">
                    <!-- Page pre-title -->
                    <div class="page-pretitle">
                        Admin
                    </div>
                    <h2 class="page-title text-white">
                        Roles
                    </h2>
                </div>

                <div class="col-auto ms-auto d-print-none">
                    <form method="POST" id="search-form" autocomplete="off" action="{{ route('admin.roles.search') }}">
                        <div class="btn-list">
                            <input type="hidden" name="_token" value="{{ csrf_token() }}"/>
                            <input type="hidden" name="action" value="search" />
                            <div class="form-group">
                                <input id="search" class="form-control" type="text" name="search" value="{{ search }}">
                            </div>

                            <span class="d-none d-sm-inline">
                                <button type="submit" class="btn">Search</button>
                            </span>
                            {% if auth_user().hasPermission('create.roles') %}
                                <span class="d-none d-sm-inline">
                                <a href="#" class="btn btn-primary" data-bs-toggle="modal"
                                   data-bs-target="#modal-create-role">
                                  Create New Role
                                </a>
                            </span>
                            {% endif %}
                        </div>
                    </form>
                </div>

            </div>
        </div>
    </div>

    <div id="users-container">
        {% include 'admin/roles-list.twig' %}
    </div>

    {% if auth_user().hasPermission('create.roles') %}
        <div class="modal modal-blur modal-lg{% if errors is empty %} fade{% endif %}" id="modal-create-role"
             tabindex="-1" role="dialog" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <form method="POST" autocomplete="off" action="{{ route('admin.users') }}">
                        <input type="hidden" name="_token" value="{{ csrf_token() }}"/>
                        <input type="hidden" name="action" value="create"/>
                        <input type="hidden" name="email" value="{{ auth_user().email }}"/>
                        <div class="modal-header">
                            <h5 class="modal-title">Create New Role</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>

                        <div class="modal-body">
                            <div class="mb-3">
                                <label class="form-label">Name</label>
                                <input name="name" type="text" class="form-control">
                            </div>
                            <div class="mb-3">
                                <label class="form-label">Slug</label>
                                <input name="slug" type="text" class="form-control">
                            </div>
                            <div class="mb-3">
                                <label class="form-label">Description</label>
                                <input name="slug" type="text" class="form-control">
                            </div>
                            <div class="mb-3">
                                <label class="form-label">Level</label>
                                <input name="level" type="number" class="form-control">
                            </div>
                            <label class="form-label">Permissions</label>
                            <div class="form-selectgroup">
                                {% for permission in permissions_list %}
                                    <label class="form-selectgroup-item">
                                        <input type="permissions" name="name" value="{{ permission.id }}" class="form-selectgroup-input">
                                        <span class="form-selectgroup-label">{{ permission.name }}</span>
                                    </label>
                                {% endfor %}
                            </div>
                            </div>
                            {% if errors is not empty %}
                                <div class="mb-3">
                                    <div class="alert alert-danger">
                                        <p>{{ errors.all()|first }}</p>
                                    </div>
                                </div>
                                {% endif %}
                        <div class="modal-footer">
                            <div class="col-auto">
                                <a href="#" class="btn btn-link link-secondary" data-bs-dismiss="modal">
                                    Cancel
                                </a>
                                <button type="submit" class="btn btn-primary">Submit</button>
                            </div>

                        </div>
                    </form>
                </div>
            </div>
        </div>
    {% endif %}

    {% if auth_user().hasPermission('delete.roles') %}
        <div class="modal modal-blur fade" id="modal-user-remove" tabindex="-1" role="dialog" aria-modal="true"
             aria-hidden="true">
            <div class="modal-dialog modal-sm modal-dialog-centered" role="document">
                <div class="modal-content">
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    <div class="modal-status bg-danger"></div>
                    <div class="modal-body text-center py-4">
                        <svg xmlns="http://www.w3.org/2000/svg" class="icon mb-2 text-danger icon-lg" width="24" height="24"
                             viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round"
                             stroke-linejoin="round">
                            <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
                            <path d="M12 9v2m0 4v.01"></path>
                            <path
                                d="M5 19h14a2 2 0 0 0 1.84 -2.75l-7.1 -12.25a2 2 0 0 0 -3.5 0l-7.1 12.25a2 2 0 0 0 1.75 2.75"></path>
                        </svg>
                        <h3>Are you sure?</h3>
                        <div class="text-muted">Do you really want to remove this user? What you've done cannot be undone.
                        </div>
                    </div>
                    <div class="modal-footer">
                        <div class="w-100">
                            <form id="user-remove-post" method="POST" autocomplete="off" action="">
                                <input type="hidden" name="_token" value="{{ csrf_token() }}"/>

                                <div class="row">
                                    <div class="col"><a href="#" class="btn w-100" data-bs-dismiss="modal">
                                            Cancel
                                        </a></div>
                                    <div class="col">
                                        <button type="submit" class="btn btn-danger w-100">Remove User</button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    {% endif %}
{% endblock %}
