{% extends "layout.default" %}

{% block title %}Public Profile{% endblock %}

{% block content %}
    <!-- ... Your existing content ... -->

    <div class="container-xl">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Connected Apps</h3>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-4">
                        <div class="card card-connected-service">
                            <div class="card-body">
                                <h4 class="connected-service-title">Google</h4>
                                <p>Connected as {{ auth_user().email }}</p>
                                <a href="{{ route('disconnect', {'service': 'google'}) }}" class="btn btn-danger">Disconnect</a>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card card-connected-service">
                            <div class="card-body">
                                <h4 class="connected-service-title">Discord</h4>
                                <p>Connected</p>
                                <a href="{{ route('disconnect', {'service': 'discord'}) }}" class="btn btn-danger">Disconnect</a>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card card-connected-service">
                            <div class="card-body">
                                <h4 class="connected-service-title">GitHub</h4>
                                <p>Connected as {{ auth_user().username }}</p>
                                <a href="{{ route('disconnect', {'service': 'github'}) }}" class="btn btn-danger">Disconnect</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- ... Rest of your existing content ... -->
{% endblock %}
